extends layout

block content
  .page-header
    h3 Create your item
    h6 * Required Fields
  form.form-horizontal(id='item', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label(class='col-sm-2 control-label', for='title') Title
      .col-sm-8
        input.form-control(name='title', required)
    .form-group
      label(class='col-sm-2 control-label', for='description') Description
      .col-sm-8
        input.form-control(type='text', name='description', id='description', required)
    .form-group
      label(class='col-sm-2 control-label', for='Price') Price: $
      .col-sm-8
        input.form-control(type='number', name='price', id='price', min="0", max="9999", step="0.01",placeholder="in the format '00.00'" required)
    .form-group
      .col-sm-offset-2.col-sm-8
        button.btn.btn-primary(type='submit')
          i.fa.fa-qrcode
          | Create the item!
